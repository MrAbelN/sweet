{
	"files.autoSave": "off",
	"files.autoSaveDelay": 1000,
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		".vscode": true,
		//optional
		"LICENSE": true,
		// "**/.embuild/": true,
		// "**/.cargo/": true,
		"**/Cargo.lock": true,
		"**/mod.rs": true,
		"**/target": true,
		"**/sdkconfig.defaults": true,
		"**/build.rs": true,
		"wasm": true,
	},
	"explorer.fileNesting.enabled": true,
	"explorer.fileNesting.patterns": {
		"*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
		"*.jsx": "${capture}.js",
		"tsconfig.json": "tsconfig.*.json",
		"Cargo.toml": "Cargo.toml, Cargo.lock, rustfmt.toml, .gitignore, README.md, LICENSE, justfile, build.rs, export-esp.ps1, export-esp.sh, rust-toolchain.toml, sdkconfig.defaults"
	},
	"rust-analyzer.files.excludeDirs": [
		// "crates\\forky_test\\src\\utility\\shoosh",
		// "crates\\forky_esp", //very slow
	],
}